<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dp">

    <RelativeLayout
        android:layout_width="407dp"
        android:layout_height="181dp"
        android:layout_alignParentTop="true"

        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/message_box">

        <TextView
            android:id="@+id/textView_user"
            android:layout_width="225dp"
            android:layout_height="41dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="70dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="108dp"
            android:layout_marginBottom="134dp"
            android:layout_weight="1"
            android:text="Teacher_Name"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/textView_message"
            android:layout_width="322dp"
            android:layout_height="67dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="67dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="48dp"
            android:layout_weight="1"
            android:text="This is a test message. Please Bear"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_semester"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView_section"
            android:layout_alignParentStart="true"
            android:layout_marginStart="92dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:text="I"
            android:textColor="#000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView_section"
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="19dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="43dp"
            android:layout_weight="1"
            android:text="A"
            android:textColor="#000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView_branch"
            android:layout_width="316dp"
            android:layout_height="23dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="15dp"
            android:layout_marginEnd="71dp"
            android:layout_marginBottom="21dp"
            android:layout_weight="1"
            android:text="Computer Science Engineering"
            android:textColor="#000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView_date"
            android:layout_width="208dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="64dp"
            android:layout_marginTop="157dp"
            android:layout_marginEnd="131dp"
            android:layout_marginBottom="0dp"
            android:layout_weight="1"
            android:text="2018-10-10"
            android:textColor="@color/colorAccent"
            android:textSize="12sp" />

    </RelativeLayout>

</RelativeLayout>
