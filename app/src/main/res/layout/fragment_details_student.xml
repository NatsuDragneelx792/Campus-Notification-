<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">


    <TextView
        android:id="@+id/tvlabelname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="35dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="103dp"
        android:text="Name : " />

    <TextView
        android:id="@+id/tvlabelusn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="153dp"
        android:layout_marginLeft="35dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="USN : " />

    <TextView
        android:id="@+id/tvlabelsemester"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvlabelname"
        android:layout_alignParentTop="true"
        android:layout_marginTop="203dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Semester : " />

    <TextView
        android:id="@+id/tvlabelbranch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvlabelname"
        android:layout_alignParentTop="true"
        android:layout_marginTop="253dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Branch : " />


    <TextView
        android:id="@+id/tvlabelsection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvlabelname"
        android:layout_alignParentTop="true"
        android:layout_marginTop="303dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Section : " />

    <TextView
        android:id="@+id/etnamestudent"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="103dp"
        android:layout_marginEnd="10dp"
        android:ems="10"
        android:textSize="20sp"
        android:inputType="textPersonName"
        android:hint="Name" />

    <TextView
        android:id="@+id/etusnstudent"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:textSize="20sp"
        android:layout_marginTop="153dp"
        android:layout_marginEnd="10dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="USN" />

    <TextView
        android:id="@+id/etsemstudent"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="203dp"
        android:layout_marginEnd="10dp"
        android:textSize="20sp"
        android:ems="10"
        android:scrollbars="horizontal"
        android:inputType="textPersonName"
        android:hint="Semester" />

    <TextView
        android:id="@+id/etbranchstudent"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="253dp"
        android:layout_marginEnd="10dp"
        android:ems="10"
        android:textSize="20sp"
        android:inputType="textPersonName"
        android:hint="Branch" />

    <TextView
        android:id="@+id/etsectionstudent"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="303dp"
        android:layout_marginEnd="10dp"
        android:ems="10"
        android:textSize="20sp"
        android:inputType="textPersonName"
        android:hint="Section" />


</RelativeLayout>