<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <EditText
        android:id="@+id/etUsername"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:layout_alignStart="@+id/radiogroup"
        android:layout_marginStart="-12dp"
        android:layout_marginTop="191dp"
        android:background="@color/colorAccent"
        android:ems="10"
        android:hint="Enter The USN in Caps"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        android:background="@color/colorAccent"
        android:ems="10"
        android:hint="Enter The Password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btnlogin"
        android:layout_width="188dp"
        android:layout_height="38dp"
        android:layout_below="@+id/radiogroup"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="96dp"
        android:background="@color/colorPrimaryDark"
        android:onClick="onlogin"
        android:text="Login"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/btnsignup"
        android:layout_width="190dp"
        android:layout_height="38dp"
        android:layout_below="@+id/btnlogin"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="98dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="96dp"
        android:background="@color/colorPrimaryDark"
        android:onClick="signup"
        android:text="Sign UP"
        android:textColor="#ffffff" />

    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_width="272dp"
        android:layout_height="79dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="342dp">

        <RadioButton
            android:id="@+id/radiostudent"
            android:layout_width="163dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="checktheuser"
            android:text="Login as Student" />

        <RadioButton
            android:id="@+id/radiostaff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="checktheuser"
            android:text="Login as Staff" />
    </RadioGroup>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="162dp"
        android:layout_height="118dp"
        android:layout_alignBottom="@+id/etPassword"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="112dp"
        android:layout_marginBottom="128dp"
        app:srcCompat="@drawable/login_avatar" />

</RelativeLayout>
